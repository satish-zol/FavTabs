<% if @discussion_group.id %>
jQuery('#no_disc_group_error').html('');
jQuery('.error').html('');
  var $output_html = jQuery("<%= escape_javascript(render :partial => "group_block", :locals=>{:disc_group => @discussion_group}).html_safe %>");
  jQuery("#create_group_disc_popup").fadeOut(function(){
    jQuery(".d_grp_conatiner").append($output_html);
    $output_html.hover(function(){
      jQuery(this).find(".album_actions").show().animate({'height':'15px'},"fast");
    },function(){
      jQuery(this).find(".album_actions").animate({'height':'0px'},"fast",function(){jQuery(this).hide()});
    });
  });
  <% end %>
display_flash_message("<%= escape_javascript(@notice).html_safe %>");
is_sending = false;