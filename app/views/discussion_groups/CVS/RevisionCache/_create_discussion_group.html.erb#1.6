<div class="grey_overlay" id="create_group_disc_popup">
  <div class="pop_up" style="height: 270px" >
    <div class="popup_inner_div">
      <a href="javascript:void(0);" onclick="jQuery('#create_group_disc_popup').fadeOut();" class="popup_close_btn">&nbsp;</a>
      <div class="popup_content">
        <%= form_for :discussion_group, :url=>{:controller => :discussion_groups, :action => 'create_discussion_group'},:remote=>true do |f|  %>
          <span class="popup_heading">Create a Group</span>
          <table width="100%" class="popup_form_table">
            <tr>
              <td  align="left" width="30%"><span class="form_field_name">Name:</span></td>
              <td align="left" ><%= text_field 'discussion_group', 'name', :style=>"width:200px", :id=>"discussion_group_name"%><br/>
                <span id="discussion_group_name_error" class="form_error"></span>
              </td>
            </tr>
            <tr>
              <td  align="left" width="30%"><span class="form_field_name">Description:</span></td>
              <td align="left" ><%= text_area 'discussion_group', 'description', :style=>"width:200px;height:50px", :id=>"discussion_group_description"%><br/>
                <span id="discussion_group_description_error" class="form_error"></span>
              </td>
            </tr>
            <tr>
              <td align="left" width="30%">
                <span class="group_privacy_options">
                  <input id="public" checked name="discussion_group[is_public]" value="1" type="radio" class="float_l radio_btn_align" /><label>Public</label>
                </span><br/>
                <span id="group_name_error" class="form_error"></span>
              </td>
              <td align="left" width="30%">
                <span class="group_privacy_options">
                  <input id="private" name="discussion_group[is_public]" value="0" type="radio" class="float_l radio_btn_align" /><label>Private</label>
                </span>
              </td>
            </tr>
            <tr>
              <td>&nbsp;</td>
              <td align="left"><input type="submit" class="blue_btn" value="Create" onclick="return discussion_group_form();"/></td>
            </tr>
          </table>
        <% end %>
      </div>
    </div>
  </div>
</div>
<script type="text/javascript">
  jQuery(document).ready(function(){
    jQuery("#create_group_disc_popup .pop_up").center();
  });
</script>
