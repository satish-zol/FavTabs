<div class="grey_overlay" id="private_group_user">
  <div class="pop_up" >
    <div class="popup_inner_div">
      <a href="javascript:void(0);" onclick="jQuery('#private_group_user').fadeOut();" class="popup_close_btn">&nbsp;</a>
      <div class="popup_content">
        <%= form_for :add_user_to_groups, :url=>{:controller=> :discussion_groups, :action => 'add_user_to_groups' }, :html=>{:id=>"send_email_form"}, :remote=>true do |f|  %>
          <span class="popup_heading">Add Email</span>
          <table width="100%" class="popup_form_table">
            <tr>
              <td  align="left" width="30%"><span class="form_field_name">Email:</span></td>
              <td align="left" ><%= text_field 'add_user_to_groups', 'email', :style=>"width:200px", :id=>"private_group_user_email"%><br/>
                <span id="private_group_user_error" class="form_error"></span>
              </td>
            </tr>
            <tr>
              <td>&nbsp;</td>
              <td align="left"><input type="submit" class="blue_btn" value="Add" onclick="return validate_email_address_form();"/></td>
            </tr>
          </table>
        <% end %>
      </div>
    </div>
  </div>
</div>
<script type="text/javascript">
  jQuery(document).ready(function(){
    jQuery("#private_group_user .pop_up").center();
  });
</script>
